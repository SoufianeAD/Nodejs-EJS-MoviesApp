<%- include('../includes/head.ejs')%>
</head>
<body class="bg-secondary">
    <div class="container border spacing bg-light" style="width: 30%; margin-top: 10%;">
        <form  class="text-center border border-light p-5" action="/user/sign-in" method="post">
            <p class="h4 mb-4">Log in</p>
            <div class="form-group">
                <input type="text" class="form-control" id="userName" name="userName" placeholder="User Name">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" name="password" placeholder="password">
            </div>

            <%if(message != undefined) {%>
                <div class="alert alert-danger" role="alert">
                    <%= message %>
                </div>
            <%}%>

            <button class="btn btn-info" type="submit">Se connecter</button>
            <div><a class="link" href="/sign-up">S'inscrire</a></div>
        </form>
    </div>
</body>