<%- include('../includes/head.ejs')%>
</head>
<body class="bg-secondary">
    <div class="container p-5 mt-5 border bg-light">
        <div class="row">
            <div class="col-4">
                <img src="https://www1.specialolympicsontario.com/wp-content/uploads/2017/01/Insert-Photo-Here.jpg"
                     class="rounded" style="max-width: 300px; max-height: 600px;" id="user"/>
            </div>
            <div class="col-8">
                <form action="/user/sign-up" method="POST" id="signUpForm">
                    <div class="header">
                        <h3>Siging Up</h3>
                    </div>
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" name="firstName" id="firstName"/>
                    </div>

                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" name="lastName" id="lastName"/>
                    </div>

                    <div class="form-group">
                        <label for="imgUrl">Image URL</label>
                        <input type="text" class="form-control" name="imgUrl" id="imgUrl" onkeyup="updatePicture()" />
                    </div>

                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" name="password" id="password" />
                    </div>

                    <div class="form-group">
                        <label for="confirm-password">Confirm Password</label>
                        <input type="password" class="form-control" name="confirm-password" id="confirm-password" />
                    </div>

                    <div class="text-right mt-5">
                        <button type="button" class="btn btn-success" onclick="onSubmitForm()">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>

<script type ="text/javascript">
    function updatePicture() {
        let url = document.getElementById("imgUrl").value;
        let img = document.getElementById("user");
        img.src = url;
        img.onerror = function () {
            img.src = "https://www.redanglagoon.com/notfound.png";
        }
    }

    function onSubmitForm() {
        const password = document.getElementById('password').value;
        const confirm_password = document.getElementById('confirm-password').value;
        if(password === confirm_password) {
            $('#signUpForm').submit();
        } else {
            alert('Password and it\'s confirmation are different!');
        }
    }
</script>